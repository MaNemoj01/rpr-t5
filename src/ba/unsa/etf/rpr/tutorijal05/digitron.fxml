<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:controller="ba.unsa.etf.rpr.tutorijal05.Controller" alignment="center" hgap="5" prefHeight="250" prefWidth="180" vgap="5" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" >
    <stylesheets>
        <URL value="@digitron.css" />
    </stylesheets>
    <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="25.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="25.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="25.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="25.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints vgrow="ALWAYS" />
      <RowConstraints vgrow="ALWAYS" />
      <RowConstraints vgrow="ALWAYS" />
      <RowConstraints vgrow="ALWAYS" />
      <RowConstraints vgrow="ALWAYS" />
      <RowConstraints vgrow="ALWAYS" />
   </rowConstraints>
   <children>
      <Button fx:id="btn1" maxWidth="Infinity"  onAction="#btnBroj1" text="1" GridPane.columnIndex="0" GridPane.rowIndex="4">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button fx:id="btn2" maxWidth="Infinity"  onAction="#btnBroj2" text="2" GridPane.columnIndex="1" GridPane.rowIndex="4">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button fx:id="btn3" maxWidth="Infinity"  onAction="#btnBroj3" prefHeight="0.0" text="3" GridPane.columnIndex="2" GridPane.rowIndex="4">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button fx:id="btn4" maxWidth="Infinity"  onAction="#btnBroj4" text="4" GridPane.columnIndex="0" GridPane.rowIndex="3">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button fx:id="btn7" maxWidth="Infinity"  onAction="#btnBroj7" text="7" GridPane.columnIndex="0" GridPane.rowIndex="2">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button fx:id="btn8" maxWidth="Infinity"  onAction="#btnBroj8" text="8" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button fx:id="btn5" maxWidth="Infinity"  onAction="#btnBroj5" text="5" GridPane.columnIndex="1" GridPane.rowIndex="3">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button fx:id="btn9" maxWidth="Infinity"  onAction="#btnBroj9" prefHeight="27.0" prefWidth="0.0" text="9" GridPane.columnIndex="2" GridPane.rowIndex="2">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button fx:id="btn6" maxWidth="Infinity"  onAction="#btnBroj6" prefHeight="27.0" prefWidth="37.0" text="6" GridPane.columnIndex="2" GridPane.rowIndex="3">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button fx:id="plusBtn" maxHeight="Infinity" maxWidth="Infinity" onAction="#btnOperacijaPlus" text="+" GridPane.columnIndex="3" GridPane.rowIndex="2" GridPane.rowSpan="2">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button maxWidth="Infinity" onAction="#btnOperacijaPosto" text="\%" GridPane.rowIndex="1" GridPane.valignment="CENTER">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button maxWidth="Infinity" onAction="#btnOperacijaDijeljenje" text="/" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button maxWidth="Infinity" onAction="#btnOperacijaPuta" text="x" GridPane.columnIndex="2" GridPane.rowIndex="1">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button fx:id="minusBtn" maxWidth="Infinity" onAction="#btnOperacijaMinus" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button fx:id="btn0" maxWidth="Infinity" onAction="#btnBroj0" text="0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button maxWidth="Infinity" onAction="#btnTacka" text="." GridPane.columnIndex="2" GridPane.rowIndex="5">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button fx:id="equalsBtn" styleClass="jednakoStill" maxHeight="Infinity" maxWidth="Infinity" onAction="#btnJednako" text="=" GridPane.columnIndex="3" GridPane.rowIndex="4" GridPane.rowSpan="2">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Label fx:id="display" text ="${controller.broj}" maxHeight="Infinity" maxWidth="Infinity" styleClass="labelStil" GridPane.columnIndex="0" GridPane.columnSpan="4">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Label>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</GridPane>
